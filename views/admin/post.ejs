<%- include('header') %>

  <div id="admin-content">
      <div class="container">
          <div class="row">
              <div class="col-md-10">
                  <h1 class="admin-heading">All Posts</h1>
              </div>
              <div class="col-md-2">
                  <a class="add-new" href="add-post">add post</a>
              </div>
              <div class="col-md-12">
                  <table class="content-table" id="dt1">
                      <thead>
                          <th>S.No.</th>
                          <th>Title</th>
                          <th>Category</th>
                          <th>Date</th>
                          <th>Author</th>
                          <th>Edit</th>
                          <th>Delete</th>
                      </thead>
                      <tbody>
                        <% let count = 0; %>
                        <% result.forEach(item => { %>
                            <% count++; %>
                          <tr>
                              <td class='id'><%= count; %></td>
                              <td><%= item.title %></td>
                              <td><%= item.category %></td>
                              <td><%= item.post_date.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                              <td><%= item.author %></td>
                              <td class='edit'><a href='update-post?post_id=<%= item._id %>'><i class='fa fa-edit'></i></a></td>
                              <td class='delete'><a style="cursor:pointer;"  onclick="deleteData('delete-post?post_id=<%= item._id %>&category=<%= item.category %>')"><i class='fa fa-trash-o'></i></a></td>
                          </tr>
                          <% }) %>
                      </tbody>
                  </table>
                  <!-- <ul class='pagination admin-pagination'>
                      <li class="active"><a>1</a></li>
                      <li><a>2</a></li>
                      <li><a>3</a></li>
                  </ul> -->
              </div>
          </div>
      </div>
  </div>
  <%- include('footer') %>

