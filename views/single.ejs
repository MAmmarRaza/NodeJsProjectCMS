<%- include('header') %>
    <div id="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                  <!-- post-container -->
                  <% result.forEach(item=>{ %>
                    <div class="post-container">
                        <div class="post-content single-post">
                            <h3><%= item.title %></h3>
                            <div class="post-information">
                                <span>
                                    <i class="fa fa-tags" aria-hidden="true"></i>
                                    <%= item.category %>
                                </span>
                                <span>
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <a href='author?author=<%= item.author %>'><%= item.author %></a>
                                </span>
                                <span>
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                    <%= item.post_date.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                </span>
                            </div>
                            <img class="single-feature-image" src="/images/<%= item.post_img %>" alt=""/>
                            <p class="description">
                                <%- item.description%>                            
                            </p>
                        </div>
                    </div>
                    <% }) %>
                    <!-- /post-container -->
                </div>
                <%- include('sidebar') %>
            </div>
        </div>
    </div>
    <%- include('footer') %>
